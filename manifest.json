{
  "name": "Hymn App",
  "short_name": "Hymn",
  "description": "A Progressive Web App for hymns",
  "start_url": "/Thymn/H1PWA.html",  // 設定啟動頁面
  "display": "standalone",           // 設定為獨立顯示，不顯示瀏覽器地址欄
  "background_color": "#ffffff",    // 設定背景顏色
  "theme_color": "#4CAF50",         // 設定主題顏色，通常是應用的主要顏色
  "icons": [
    {
      "src": "/Thymn/icons/icon-192x192.png", // 設定應用圖標
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "/Thymn/icons/icon-512x512.png", // 設定應用圖標
      "sizes": "512x512",
      "type": "image/png"
    }
  ],
  "scope": "/Thymn",  // 設定應用的範圍，確保它能在/Thymn目錄下運行
  "orientation": "portrait"  // 設定應用的顯示方向，這裡設定為縱向顯示
}
